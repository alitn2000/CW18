@using App.Domain.Core.Bank.TransactionAggrigate.Entite

@model List<TransAction>;

<div class="container mt-4">
    <h2 class="text-center mb-4">Product List</h2>
    <table class="table table-striped table-bordered table-hover text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">SourceCard Number</th>
                <th scope="col">Destination CardNumber</th>
                <th scope="col">Amount</th>
                <th scope="col">TransActiond Date</th>
                <th scope="col">Is Successfulll </th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null && Model.Any())
                {



                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.TransactionId</th>
                            <td>@item.TransactionId</td>
                            <td>@item.SourceCardNumber</td>
                            <td>@item.DestinationCardNumber</td>
                            <td>@item.Amount</td>
                            <td>@item.TransactionDate</td>
                            <td>@item.IsSuccessful</td>
                        </tr>
                    }

                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-danger">
                            No products available.
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>